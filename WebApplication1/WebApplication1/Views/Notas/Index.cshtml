@model List<WebApplication1.Models.Nota>

@{
    ViewData["Title"] = "Registro de notas del alumno";

    var alumno = ViewBag.Alumno as WebApplication1.Models.Alumno;
    var alumnos = ViewBag.Alumnos as IEnumerable<WebApplication1.Models.Alumno>;

    bool esAlumno = ViewBag.EsAlumno != null && (bool)ViewBag.EsAlumno;
}

<div class="notas-wrapper" style="margin-top: 40px;">
    <h2>Registro de notas del alumno</h2>

    @* SOLO DOCENTE: selector de alumnos *@
    @if (!esAlumno && alumnos != null && alumnos.Any())
    {
        <form asp-action="Index" method="get" class="mb-3">
            <label class="form-label">Seleccione el alumno:</label>
            <select name="idAlumno" class="form-control">
                @foreach (var a in alumnos)
                {
                    if (alumno != null && a.Id == alumno.Id)
                    {
                        <option value="@a.Id" selected="selected">
                            @a.Carne - @a.NombreCompleto
                        </option>
                    }
                    else
                    {
                        <option value="@a.Id">
                            @a.Carne - @a.NombreCompleto
                        </option>
                    }
                }
            </select>

            <button type="submit" class="btn btn-primary" style="margin-top:10px;">
                Ver notas
            </button>
        </form>
    }

    @* Datos generales del alumno *@
    @if (alumno != null)
    {
        <div class="mb-3">
            <p><strong>Nombre:</strong> @alumno.NombreCompleto</p>
            <p><strong>Carne:</strong> @alumno.Carne</p>
            <p><strong>Grado y sección:</strong> @alumno.GradoSeccion</p>
            <p><strong>Especialidad:</strong> @alumno.Especialidad</p>
            @* Quitamos AnioAcademico porque no existe en el modelo *@
            @* <p><strong>Año académico:</strong> @alumno.AnioAcademico</p> *@
        </div>
    }

    @* Tabla de notas *@
    <h4>Detalle de notas por materia</h4>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Materia</th>
                    <th>Parcial 1</th>
                    <th>Parcial 2</th>
                    <th>Nota final</th>
                    @* Quitamos Estado porque no existe en Nota *@
                    @* <th>Estado</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var nota in Model)
                {
                    <tr>
                        <td>@nota.Materia?.Nombre</td>
                        <td>@nota.Parcial1</td>
                        <td>@nota.Parcial2</td>
                        <td>@nota.NotaFinal</td>
                        @* <td>@nota.Estado</td> *@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay notas registradas para este alumno.</p>
    }
</div>
