@model IEnumerable<WebApplication1.Models.Materia>

@{
    ViewData["Title"] = "Materias";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Materias</h2>

        <div>
            <a asp-controller="Docente" asp-action="Alumnos" class="btn btn-outline-secondary btn-sm me-2">
                ← Volver a alumnos
            </a>
            <a asp-controller="Docente" asp-action="CrearMateria" class="btn btn-primary btn-sm">
                + Nueva materia
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }

    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>U.V.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Nombre</td>
                            <td>@m.UnidadesValorativas</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

