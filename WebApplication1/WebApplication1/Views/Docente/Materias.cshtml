@model IEnumerable<WebApplication1.Models.Materia>

@{
    ViewData["Title"] = "Materias";
}

<main class="panel-wrapper">
    <section class="panel-card">
        <header>
            <h1 class="panel-title">Materias</h1>
            <p class="panel-subtitle">
                Lista de materias registradas en el sistema.
            </p>
        </header>

        <div class="panel-actions">
            <a asp-controller="Docente"
               asp-action="Alumnos"
               class="panel-btn panel-btn-outline">
                ← Volver a alumnos
            </a>

            <a asp-controller="Docente"
               asp-action="CrearMateria"
               class="panel-btn panel-btn-primary">
                + Nueva materia
            </a>
        </div>

        <table class="panel-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    @* Si luego quieres mostrar las U.V., aquí agregas otra columna *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        @* <td>@item.UV</td>  ← Esto causaba el error *@
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>
