@model WebApplication1.Models.Materia

@{
    ViewData["Title"] = "Crear nueva materia";
}

<div class="page-with-header">
    <div class="admin-box">
        <div class="admin-header">
            <h2 class="admin-title">Crear nueva materia</h2>
            <p class="admin-subtitle">
                Completa los datos para registrar una nueva materia en el sistema.
            </p>
        </div>

        <div class="admin-body">
            <a asp-action="Materias" class="btn-ghost">
                ← Volver a materias
            </a>

            <form asp-action="CrearMateria" method="post" class="mt-4">

                <div class="form-group">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UnidadesValorativas" class="form-label"></label>
                    <input asp-for="UnidadesValorativas" class="form-control" />
                    <span asp-validation-for="UnidadesValorativas" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn-primary-hero">
                        Guardar materia
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
