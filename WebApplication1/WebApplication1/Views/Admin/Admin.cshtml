@{
    ViewData["Title"] = "Panel administrativo";
}

<div class="container mt-5 mb-5 page-with-header">
    <h2 class="mb-4">Panel administrativo</h2>

    <p class="text-muted mb-4">
        Desde aquí puedes gestionar la información del sistema.
    </p>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Alumnos</h5>
                    <p class="card-text">
                        Ver y administrar la información de los alumnos.
                    </p>
                    <a asp-controller="Docente" asp-action="Alumnos" class="btn btn-primary btn-sm">
                        Ir al panel de alumnos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Notas</h5>
                    <p class="card-text">
                        Consultar el apartado de notas del sistema.
                    </p>
                    <a asp-controller="Notas" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Ver apartado de notas
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Configuración</h5>
                    <p class="card-text">
                        (Espacio reservado para futuras opciones de administración).
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
