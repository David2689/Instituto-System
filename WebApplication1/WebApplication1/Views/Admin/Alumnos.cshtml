@model IEnumerable<WebApplication1.Models.Alumno>

@{
    ViewData["Title"] = "Panel docente - Alumnos";
}

<section class="panel-wrapper">
    <div class="panel-card">
        <h1 class="panel-title">Panel docente - Alumnos</h1>
        <p class="panel-subtitle">
            Seleccione un alumno para ver y editar sus notas.
        </p>

        <div class="panel-actions">
            <a asp-controller="Docente"
               asp-action="Materias"
               class="panel-btn panel-btn-primary">
                Ver materias
            </a>

            <a asp-controller="Docente"
               asp-action="CrearAlumno"
               class="panel-btn panel-btn-secondary">
                + Nuevo alumno
            </a>
        </div>

        <table class="panel-table">
            <thead>
                <tr>
                    <th>Carne</th>
                    <th>Nombre</th>
                    <th>Especialidad</th>
                    <th>Grado / Sección</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model)
                {
                    <tr>
                        <td>@alumno.Carne</td>
                        <td>@alumno.NombreCompleto</td>
                        <td>@alumno.Especialidad</td>
                        <td>@alumno.GradoSeccion</td>
                        <td>
                            <a asp-controller="Notas"
                               asp-action="Editar"
                               asp-route-idAlumno="@alumno.Id"
                               class="panel-link">
                                Editar notas
                            </a>
                            <a asp-controller="Notas"
                               asp-action="Index"
                               asp-route-idAlumno="@alumno.Id"
                               class="panel-link">
                                Ver notas (alumno)
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
