@model List<WebApplication1.Models.Alumno>

@{
    ViewData["Title"] = "Panel docente - Alumnos";
}

<h2>Panel docente - Alumnos</h2>

<p>
    <a asp-controller="Docente" asp-action="Materias">Ver materias</a>
    +
    <a asp-controller="Docente" asp-action="CrearAlumno">Nuevo alumno</a>
</p>

<p>Seleccione un alumno para ver y editar sus notas.</p>

<table>
    <thead>
        <tr>
            <th>Carne</th>
            <th>Nombre</th>
            <th>Especialidad</th>
            <th>Grado / Sección</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Carne</td>
                <td>@a.NombreCompleto</td>
                <td>@a.Especialidad</td>
                <td>@a.GradoSeccion</td>
                <td>
                    <a asp-controller="Docente" asp-action="EditarNotas" asp-route-id="@a.Id">
                        Editar notas
                    </a>
                    |
                    <a asp-controller="Notas" asp-action="Index" asp-route-idAlumno="@a.Id">
                        Ver notas (alumno)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
