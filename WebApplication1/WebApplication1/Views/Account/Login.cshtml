@{
    ViewData["Title"] = "Inicio de sesión";
}

<section class="section" style="padding-top: 140px; padding-bottom: 80px;">
    <div class="container">
        <h2 class="h2 section-title mb-4">Inicio de sesión</h2>

        <div style="max-width: 480px; margin: 0 auto; background: #ffffff; border-radius: 12px; padding: 24px; box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);">
            <form asp-controller="Account" asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="usuario" class="form-label">Usuario / Carné</label>
                    <input id="usuario" name="usuario" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input id="password" name="password" type="password" class="form-control" />
                </div>

                <p class="text-muted" style="font-size: 0.9rem;">
                    <strong>Alumno:</strong> Carné + contraseña <code>12345</code><br />
                    <strong>Docente:</strong> usuario <code>docente</code> / contraseña <code>admin123</code>
                </p>

                @if (ViewBag.Error != null)
                {
                    <p style="color:red">@ViewBag.Error</p>
                }

                <button type="submit" class="btn btn-primary">
                    Entrar
                </button>
            </form>
        </div>
    </div>
</section>
    