@{
    ViewData["Title"] = "Inicio de sesión";
}

<h2>Inicio de sesión</h2>

<form asp-controller="Account" asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label for="usuario">Usuario / Carné</label>
        <input id="usuario" name="usuario" type="text" />
    </div>

    <div>
        <label for="password">Contraseña</label>
        <input id="password" name="password" type="password" />
    </div>

    <p>
        <strong>Alumno:</strong> Carné + contraseña <code>12345</code><br />
        <strong>Docente:</strong> usuario <code>docente</code> / contraseña <code>admin123</code>
    </p>

    @if (ViewBag.Error != null)
    {
        <p style="color:red">@ViewBag.Error</p>
    }

    <button type="submit">Entrar</button>
</form>
