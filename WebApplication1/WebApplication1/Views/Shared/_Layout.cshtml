@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instituto Nacional De Usulután</title>

    <!-- favicon -->
    <link rel="shortcut icon" href="/img/hero-banner.png" type="image/png" />

    <!-- custom css -->
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />

    <!-- preload images -->
    <link rel="preload" as="image" href="/img/hero-banner.png" />
    <link rel="preload"
          as="image"
          href="/img/hero-abs-1.png"
          media="(min-width:768px)" />
    <link rel="preload"
          as="image"
          href="/img/hero-abs-2.png"
          media="(min-width:768px)" />
</head>

<body id="top">
    <!-- #HEADER -->
    <header class="header" data-header>
        <div class="container">
            <h1>
                <a href="/#home" class="logo">Instituto Nacional De Usulután</a>
            </h1>

            <nav class="navbar" data-navbar>
                <div class="navbar-top">
                    <a href="/#home" class="logo">Nouman School</a>

                    <button class="nav-close-btn"
                            aria-label="Close menu"
                            data-nav-toggler>
                        <ion-icon name="close-outline"></ion-icon>
                    </button>
                </div>

                <ul class="navbar-list">

                    <!-- SOLO UN "Inicio" -->
                    <li class="navbar-item">
                        <a href="/#home" class="navbar-link" data-nav-toggler>
                            Inicio
                        </a>
                    </li>

                    <li class="navbar-item">
                        <a asp-controller="Notas" asp-action="Index" class="navbar-link" data-nav-toggler>
                            Apartado de notas
                        </a>
                    </li>

                    <li class="navbar-item">
                        <a href="/#classes" class="navbar-link" data-nav-toggler>Especialidades</a>
                    </li>

                    <li class="navbar-item">
                        <a href="/#tuition" class="navbar-link" data-nav-toggler>Centro de Matricula</a>
                    </li>

                    <li class="navbar-item">
                        <a asp-controller="Account" asp-action="Login" class="navbar-link">
                            Iniciar sesión
                        </a>
                    </li>

                    <li class="navbar-item">
                        <a asp-controller="Docente" asp-action="Alumnos" class="navbar-link">
                            Panel docente
                        </a>
                    </li>

                    <li class="navbar-item">
                        <a asp-controller="Admin" asp-action="Index" class="navbar-link">
                            Panel administrativo
                        </a>
                    </li>
                </ul>

                <div class="header-actions">
                    <button class="header-action-btn"
                            aria-label="Open search"
                            data-search-toggler>
                        <ion-icon name="search-outline"></ion-icon>
                    </button>

                    <a href="tel:+923023207807"
                       class="header-action-btn login-btn"
                       target="_blank">
                        <ion-icon name="person-outline" aria-hidden="true"></ion-icon>
                        <span class="span">Contacto</span>
                    </a>

                    <button class="header-action-btn nav-open-btn"
                            aria-label="Open menu"
                            data-nav-toggler>
                        <ion-icon name="menu-outline"></ion-icon>
                    </button>
                </div>
            </nav>

            <div class="overlay" data-nav-toggler data-overlay></div>
        </div>
    </header>

    <!-- #SEARCH BOX -->
    <div class="search-container" data-search-box>
        <div class="container">
            <button class="search-close-btn"
                    aria-label="Close search"
                    data-search-toggler>
                <ion-icon name="close-outline"></ion-icon>
            </button>

            <div class="search-wrapper">
                <input type="search"
                       name="search"
                       placeholder="Search Here..."
                       aria-label="Search"
                       class="search-field" />

                <button class="search-submit" aria-label="Submit" data-search-toggler>
                    <ion-icon name="search-outline"></ion-icon>
                </button>
            </div>
        </div>
    </div>

    <main>
        @RenderBody()
    </main>

    <!-- #FOOTER -->
    <footer class="footer">
        <div class="container">
            <div class="footer-top">
                <div class="footer-brand">
                    <a href="/#home" class="logo">Intituto Nacional de Usulután</a>

                    <p class="section-text">
                        Únete al Instituto Nacional de Usulután y comienza tu camino hacia un futuro lleno de oportunidades.
                        Contamos con docentes comprometidos, formación de calidad y un ambiente que impulsa tu crecimiento académico y personal.
                    </p>

                    <ul class="social-list">
                        <li>
                            <a href="https://web.facebook.com/profile.php?id=100083138351633&_rdc=1&_rdr"
                               class="social-link"
                               target="_blank">
                                <ion-icon name="logo-facebook"></ion-icon>
                            </a>
                        </li>
                    </ul>
                </div>

                <ul class="footer-list">
                    <li>
                        <p class="footer-list-title">Explorar</p>
                    </li>

                    <li>
                        <a href="#" class="footer-link">
                            <ion-icon name="chevron-forward" aria-hidden="true"></ion-icon>
                            <span class="span">Sobre nosotros</span>
                        </a>
                    </li>

                    <li>
                        <a href="#" class="footer-link">
                            <ion-icon name="chevron-forward" aria-hidden="true"></ion-icon>
                            <span class="span">Blog & Noticias</span>
                        </a>
                    </li>

                    <li>
                        <a href="#" class="footer-link">
                            <ion-icon name="chevron-forward" aria-hidden="true"></ion-icon>
                            <span class="span">Testimonios</span>
                        </a>
                    </li>
                </ul>

                <ul class="footer-list">
                    <li>
                        <p class="footer-list-title">Contacto</p>
                    </li>

                    <li class="footer-item">
                        <ion-icon name="location-outline" aria-hidden="true"></ion-icon>
                        <address class="footer-link">
                            8a Avenida Nte., Usulután, El Salvador
                        </address>
                    </li>

                    <li class="footer-item">
                        <ion-icon name="call" aria-hidden="true"></ion-icon>
                        <a href="tel:+923023207807" class="footer-link"> 2662 0406</a>
                    </li>

                    <li class="footer-item">
                        <ion-icon name="mail-outline" aria-hidden="true"></ion-icon>
                        <a href="mailto:alexandermartinez19a@gmail.com" class="footer-link">
                            alexandermartinez19a@gmail.com
                        </a>
                    </li>
                </ul>
            </div>

            <div class="footer-bottom">
                <p class="copyright">
                    Copyright 2025 Software Studios |
                    <a href="https://software-studios-sv.netlify.app/"
                       target="_blank"
                       class="copyright-link">
                        Alexander Martinez USSS001725
                    </a>
                </p>
            </div>
        </div>
    </footer>

    <!-- #BACK TO TOP -->
    <a href="#top"
       class="back-top-btn"
       aria-label="Back to top"
       data-back-top-btn>
        <ion-icon name="arrow-up"></ion-icon>
    </a>

    <!-- custom js -->
    <script src="~/js/script.js" defer></script>

    <!-- ionicons -->
    <script type="module"
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
